@{
}
@model RegisterViewModel

<div class="form-block-design">

<form class="form-design" asp-controller=Account asp-action=Register>
    <h3> Здравствуйте!</h3>
    <fieldset>
     <div asp-validation-summary="ModelOnly">  </div>
    <div class="input-group mb-2">
        <label class="label-design" asp-for=Name> </label>
        <br>
        <input asp-for=Name type=text>
        <span asp-validation-for=Name></span>
    </div>

    <div class="input-group mb-2">
        <label class="label-design" asp-for=Email> </label>
        <br>
        <input asp-for=Email type="email">
         <span asp-validation-for=Email></span>
    </div>

    <div class="input-group mb-4">
        <label class="label-design" asp-for=Password> </label>
        <br>
        <input asp-for=Password type="password">
        <span asp-validation-for=Password></span>
    </div>

     <div>
        <input class="btn btn-primary button-design-register" type="submit">
    </div>
    </fieldset>
   
</form>
</div>