@{
}
@model OrderViewModel

<div class="product-form-block-design">
    <h3 class="h3-design">Новый заказ</h3>
<form  asp-action="NewOrder"  asp-controller="Order"  method="post" class="form-design-product">

<fieldset class="border-1 border-dark">

      <div class="input-group mb-2">
            <label class="label-design" asp-for=Order.FirstName> </label>
            <br>
            <input class="w-100" asp-for=Order.FirstName  type="text" >
            <span asp-validation-for=Order.FirstName></span>
      </div>
 
      <div class="input-group mb-2">
            <label class="label-design" asp-for=Order.LastName>  </label>
            <br>
            <input class="w-100"  asp-for=Order.LastName type="text"/>
             <span asp-validation-for=Order.LastName></span>
      </div>

      <div class="input-group mb-2">
            <label class="label-design" asp-for=Order.Email>  </label>
            <br>
            <input class="w-100" asp-for=Order.Email type="text"/>
             <span asp-validation-for=Order.Email></span>
      </div>

      <div class="input-group mb-2">
            <label class="label-design" asp-for=Order.Phone>  </label>
            <br>
            <input class="w-100" asp-for=Order.Phone type="text"/>
            <span asp-validation-for=Order.Phone></span>
      </div>

      <div class="input-group mb-4">
            <label class="label-design" asp-for=Order.Address>  </label>
            <br>
            <input class="w-100" asp-for=Order.Address type="text" >
            <span asp-validation-for=Order.Address></span>
      </div>
  
      <div class="input-group mb-2">
            <button   class="btn btn-primary button-design-product" type="submit"> Заказать </button>
      </div>

</fieldset>

</form>
</div>