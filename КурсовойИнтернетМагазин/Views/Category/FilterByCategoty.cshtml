@{
    
}
@model Category

<div>
    <p> @Model.Name </p>
</div>
@foreach(var products in Model.Products){
<div class="flex"> 
    <div>
        <img src=@products.Img.Path width="350" height="250"> 
    </div>
    <div>
        <p> Наименование товара: @products.Name </p>
        <p> Производитель:  @products.Manufacturer </p>
        <p> Цена: @products.Cost BYN </p>
        <p> Описание: @products.Description </p>
        <form method="post">
        <button type="submit" asp-route-productId=@products.Id asp-action="DeleteFromCart"> Удалить </button>
        </form>

    </div>
</div>
}