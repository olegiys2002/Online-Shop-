@using Microsoft.AspNetCore.Identity
<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a  class="nav-link active" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form asp-action="Logout" asp-controller="Account">
        <input class="btn btn-light  my-2 my-sm-0 m-lg-2" type="submit" value="Выйти">
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link active" asp-controller=Account asp-action=Register> Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-controller=Account asp-action=Login> Login </a>
    </li>
}
</ul>
